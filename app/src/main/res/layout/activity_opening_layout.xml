<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12141C"
    android:layout_gravity="center_vertical"
    tools:context=".App_opening_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="60dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/need_n"
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_n"/>
            <ImageView
                android:id="@+id/need_e"
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:src="@drawable/ic_e"/>
            <ImageView
                android:id="@+id/need_e2"
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-2dp"
                android:src="@drawable/ic_e"/>
            <ImageView
                android:id="@+id/need_d"
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-1dp"
                android:src="@drawable/ic_d"/>


        </LinearLayout>
    </LinearLayout>



</LinearLayout>